{
    "productName": "SmartCal",
    "version": "1.0.0",
    "identifier": "com.smartcal.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:3000",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "SmartCal - Lịch thông minh",
                "width": 1200,
                "height": 800,
                "minWidth": 400,
                "minHeight": 600,
                "center": true,
                "resizable": true
            }
        ]
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        }
    }
}